extends ./templates/general.template.pug

block title 
  title PayCP | Thay đổi mật khẩu

block append style 
  link(rel="stylesheet", href="/css/auth-form.css")
  link(rel="stylesheet", href="/css/change-password.css")

block content
  .mt-5.mb-2.mx-auto
    .form-box(style="max-width: 420px")
      .form-key
        i.bi.bi-key-fill(aria-hidden="true")
      .form-title THAY ĐỔI MẬT KHẨU
      .form-form
        form#pwdForm(action="/change-password", method="POST")
          mixin passwordField(name, title)
            .form-group
              label.form-control-label(for=name)= title
              .position-relative.mb-5
                input.form-control(type="password", id=name name=name, maxLength="50")
                i.bi.bi-eye-slash-fill.view-password-icon

          +passwordField("oldPassword", "MẬT KHẨU HIỆN TẠI")
          +passwordField("newPassword", "MẬT KHẨU MỚI")
          +passwordField("confirmPw", "NHẬP LẠI MẬT KHẨU MỚI")

          .p-0.mb-4.d-flex.justify-content-between.align-items-center
            .form-text.text-danger#formMsg= msg ? msg : ""
            .form-button
              button.btn.btn-outline-primary(type="submit") Cập Nhật

block append script 
  script(src="/js/change-password.js") 