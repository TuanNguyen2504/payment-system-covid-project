extends ./templates/general.template.pug
include ./mixins/header.mixin.pug
include ./mixins/footer.mixin.pug

block title 
  title PayCP | Tổng quan

block append style
  link(rel="stylesheet", href="/css/dashboard.css")

block bootstrapIcon

block content
  if msg 
    .toast-msg.show(class=isPutMoneySuccess?'success':'danger')= msg
      .close-icon x
  .box
    h2.box-title Số dư hiện tại
    .mt-3.mb-4.pl-2.d-flex.flex-column
      span.balance=helpers.formatCurrency(balance || 0)
      span.available Khả dụng

    button.btn.btn-primary
      a(href="/put-money") Nạp tiền

block append script 